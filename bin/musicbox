#!/usr/bin/env ruby

require 'simple-command'
require 'musicbox'

SimpleCommand.run do

  global root: nil do
    @musicbox = MusicBox.new(root: @root)
  end

  command 'extract' do |args|
    @musicbox.extract(args)
  end

  command 'export', dir: nil, compress: false, force: false, parallel: true do |args|
    @musicbox.export(args,
      dir: @dir,
      compress: @compress,
      force: @force,
      parallel: @parallel)
  end

  command 'fix' do |args|
    @musicbox.fix(args)
  end

  command 'get-cover' do |args|
    @musicbox.get_cover(args)
  end

  command 'cover' do |args|
    @musicbox.cover(args)
  end

  command 'import' do |args|
    @musicbox.import(args)
  end

  command 'label' do |args|
    @musicbox.label(args)
  end

  command 'dir' do |args|
    @musicbox.dir(args)
  end

  command 'open' do |args|
    @musicbox.open(args)
  end

  command 'orphaned' do
    @musicbox.orphaned
  end

  command 'show', details: false do |args|
    @musicbox.show(args,
      show_details: @details)
  end

  command 'csv' do |args|
    @musicbox.csv(args)
  end

  command 'dups' do |args|
    @musicbox.dups(args)
  end

  command 'artist-keys' do |args|
    @musicbox.artist_keys(args)
  end

  command 'play', device: nil, log_level: nil do |args|
    @musicbox.play(args,
      audio_device: @device,
      mpv_log_level: @log_level)
  end

  command 'select' do |args|
    @musicbox.select(args)
  end

  command 'update' do |args|
    @musicbox.update
  end

  command 'update-tags', force: false do |args|
    @musicbox.update_tags(args, force: @force)
  end

end