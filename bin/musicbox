#!/usr/bin/env ruby

require 'simple-command'
require 'musicbox'

SimpleCommand.run do

  global do
    @musicbox = MusicBox.new
  end

  command 'export', dir: nil, compress: false, force: false, parallel: true do |args|
    @musicbox.export(args,
      dest_dir: @dir,
      compress: @compress,
      force: @force,
      parallel: @parallel)
  end

  command 'fix' do |args|
    @musicbox.fix(args)
  end

  command 'cover' do |args|
    @musicbox.cover(args)
  end

  command 'import' do |args|
    @musicbox.import(args)
  end

  command 'label' do |args|
    @musicbox.label(args)
  end

  command 'dir' do |args|
    @musicbox.dir(args)
  end

  command 'open' do |args|
    @musicbox.open(args)
  end

  command 'orphaned' do
    @musicbox.orphaned
  end

  command 'show-albums', cover: false, details: false do |args|
    if @cover
      mode = :cover
    elsif @details
      mode = :details
    else
      mode = :summary
    end
    @musicbox.show_albums(args, mode: mode)
  end

  command 'show-releases', details: false do |args|
    if @details
      mode = :details
    else
      mode = :summary
    end
    @musicbox.show_releases(args, mode: mode)
  end

  command 'show-artists' do
    @musicbox.show_artists
  end

  command 'csv' do |args|
    @musicbox.csv(args)
  end

  command 'play', device: nil, exclusive: nil, mpv_log_level: nil, eq: nil, ignore_state: nil do |args|
    @musicbox.play(args,
      audio_device: @device,
      audio_exclusive: @exclusive,
      mpv_log_level: @mpv_log_level,
      equalizer_name: @eq,
      ignore_state: @ignore_state)
  end

  command 'update' do |args|
    @musicbox.update
  end

  command 'update-from-release', force: false do |args|
    @musicbox.update_from_release(args, force: @force)
  end

  command 'update-tags' do |args|
    @musicbox.update_tags(args)
  end

end